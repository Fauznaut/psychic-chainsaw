{% extends 'Global/base.twig' %}

{% block body %}

	<div class="container">
		
		<div class="col-md-12 center-block text-center">
			<h1>Error {{ title }}!</h1>
			<br/>
			<span class="alert alert-info">
				You are an admin, you will see errors no matter what!
			</span>
		</div>
	
		<div class="col-md-12">
			<h4>Content</h4>
			{% if error is iterable %}
				<div class="well">
					<samp>
						{# For loop to run through errors #}
						{% for key, value in error %}
							<span id="{{ key }}">
								{{ key }}: {{ value }}
							</span>
							<br/>
						{% endfor %}
					</samp>
				</div>
			{% endif %}
		</div>
	</div>

{% endblock %}